{
    "name": "demo/webeid-php",
    "description": "Web eID PHP demo",
    "license": "MIT",
    "authors": [
        {
            "name": "Guido Gröön",
            "role" : "developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "web-eid/web-eid-authtoken-validation-php": "1.2.*",
        "altorouter/altorouter": "^1.1",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": ["tests"]
        }
    },
    "scripts": {
        "fix-php": ["prettier src/**/* --write", "prettier examples/src/* --write"],
        "test": "phpunit --no-coverage --display-warnings",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-html coverage"
        ]
    }
}
